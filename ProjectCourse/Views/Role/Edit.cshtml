@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Edit";
}
<table>
    <tr>
        <td>
            <h2> Edit User Roles</h2>
        </td>

    </tr>

    <tr>
        <td>
            @foreach (var item in Model)
            {
                <div class="container col-lg-2" style="">@item.Name</div> <div class="col-lg-2"> | </div> <div class="container col-lg-8">@Html.ActionLink("Edit", "Edit", new { item.Id })</div>
            }
        </td>
    </tr>
    <tr>
        <td>
            <h3>   @Html.ActionLink("Click to Create New Role", "Create", "Role") </h3>
        </td>
    </tr>
</table>

