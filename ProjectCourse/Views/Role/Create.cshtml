@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Add New Role";
}
<h2>Add New User Role:</h2>

@using (Html.BeginForm())
{
    <p> Enter User Role Name:</p>
    
    @Html.EditorFor(m => m.Name, new { required = true })
    <input type="submit" value="Create Role" data-val="true" data-val-required="The Username field is required." />

    if (ViewBag.Message != null)
    {
        <p style="color: red;">@Html.Raw(ViewBag.Message)</p> 
    }
}
